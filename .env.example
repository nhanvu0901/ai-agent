# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
DEBUG_MODE=true

# Neo4j Database Connection
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Qdrant Vector Database Connection
QDRANT_URL=http://qdrant:6333

# OpenAI Authentication
# Can be either regular OpenAI API key or Azure OpenAI API key
OPENAI_API_KEY=your_openai_api_key

# Azure OpenAI Configuration
# Uncomment and fill these if using Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# AI Model Configuration
# For Azure deployments, these are the deployment names
AGENT_MODEL_DEPLOYMENT=gpt-4o-mini
EMBEDDING_MODEL_DEPLOYMENT=ace-text-embedding-3-large
CONTEXT_WINDOW_SIZE=4096

# Embeddings Configuration
# For Cohere API (optional)
# COHERE_API_KEY=your_cohere_api_key
EMBEDDING_MODEL=embed-multilingual-v3.0
EMBEDDING_BATCH_SIZE=20

# Data Paths
PDF_DIR=./data/pdfs
JSON_DIR=./data/json
UPLOAD_DIR=./data/uploads